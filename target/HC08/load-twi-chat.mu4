( This file loads the TWI chat over USB code into the flash of an S08 part.)

ld! target/HC08/build.mu4  ( sets radix to hex!)

.ifdef in-ram
   -- "0a0 dup xram! ram!  ( back up so we have more room for code...)
   ram
.else
   flash  @flash #flash +  ( end of flash)
   .reg EPCTL0 .if
      3 Ki -  ( because BDM USB code takes up 1 Ki now)
   .else
      5 Ki 2/ -
   .then
   flash!  ( reset flash origin)
.then

.reg EPCTL0 .if
ld target/HC08/twi-chat-usb-core.mu4
.then
